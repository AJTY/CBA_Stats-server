<h1>Listing hitters</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hitters.each do |hitter| %>
      <tr>
        <td><%= link_to 'Show', hitter %></td>
        <td><%= link_to 'Edit', edit_hitter_path(hitter) %></td>
        <td><%= link_to 'Destroy', hitter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hitter', new_hitter_path %>
